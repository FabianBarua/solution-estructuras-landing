---
import { DashboardLayout } from "@/components/react/DashboardLayout"
import { ProductsDashboard } from "@/components/react/ProductsDashboard.tsx"
import AdminLayout from "@/layouts/AdminLayout.astro"

const user = Astro.locals.user

if (!user) {
	return Astro.redirect("/login")
}
---

<AdminLayout title="Products">
	<DashboardLayout client:load url={"/admin/products"}>
		<ProductsDashboard client:load />
	</DashboardLayout>
</AdminLayout>
